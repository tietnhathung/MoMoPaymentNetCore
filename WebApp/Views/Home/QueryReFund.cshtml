@model MoMoSdk.Models.QueryRefund.QueryRefundResponse
@{
    ViewData["Title"] = "Query Refund";
}
<h1>@ViewData["Title"]</h1>

<form method="get">
    <h2>Form thanh toán</h2>
    <label>
        OrderId <input name="orderId" />
    </label>
    <button type="submit">Submit</button>
</form>
<ol>
    <li>Message: @Model.Message</li>
    <li>OrderId: @Model.OrderId</li>
    <li>RequestId: @Model.RequestId</li>
    <li>ResultCode: @Model.ResultCode</li>
    @if (Model.Items != null)
    {
        <li>Refund:
            <ul>
                @foreach (var item in Model.Items)
                {
                    <li>Id: @item.Id</li>
                    <li>RefundAmount: @item.RefundAmount</li>
                    <li>RefundCount: @item.RefundCount</li>
                    <li>ResultDescription: @item.ResultDescription</li>
                    <li>ResultCode: @item.ResultCode</li>
                }
            </ul>
        </li>
    }
     @if (Model.RefundTrans != null)
        {
            <li>Refund:
                <ul>
                    @foreach (var refund in Model.RefundTrans)
                    {
                        <li>Amount: @refund.Amount</li>
                        <li>ResultCode: @refund.ResultCode</li>
                        <li>ResultCode: @refund.CreatedTime</li>
                        <li>OrderId: @refund.OrderId</li>
                        <li>TransId: @refund.TransId</li>
                    }
                </ul>
            </li>
        }
</ol>